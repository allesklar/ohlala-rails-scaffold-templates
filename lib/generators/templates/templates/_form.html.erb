<%%= simple_form_for @<%= singular_name %> do |f| %>

  <%%= f.error_notification %>

  <div class="inputs">
	  <%- attributes.each do |attribute| -%>
	    <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, 
									:placeholder => 'helpful_short_hint', 
									:hint => 'longer_and_very_helpful_hint' %>
	  <%- end -%>
  </div>

  <div class="actions">
    <%%= f.button :submit %>
  </div>

<%% end %>
